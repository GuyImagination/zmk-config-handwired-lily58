&i2c0 {
    status = "okay";
    sda-pin = <20>;
    scl-pin = <22>;
    clock-frequency = <400000>;

    oled: ssd1306@3c {
        compatible = "zmk,oled-ssd1306";
        reg = <0x3c>;
        width = <128>;
        height = <32>;
        segment-offset = <0>;
        com-offset = <0>;
        rotation = <0>;
    };
};